<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-light">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="{{path('produit_index')}}">Accueil</a></li>
                {% if app.user is null %}
                <li class="nav-item"><a class="nav-link" href="{{path('app_register')}}">S'inscrire</a></li>
                <li class="nav-item"><a class="nav-link" href="{{path('app_login')}}">Connexion</a></li>
                {% endif %}
                {% if app.user is not null %}
                <li class="nav-item"><a class="nav-link" href="{{path('app_logout')}}">DÃ©connexion</a></li>
                <li class="nav-item"><a class="nav-link" href="{{path('contenu_panier_index')}}">Mon panier</a></li>
                <li class="nav-item"><a class="nav-link" href="{{path('compte_index')}}">Mon compte</a></li>
                {% endif %}
            </ul>
        </nav>
        <div class="container">

        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <p class="alert alert-{{ type }}"> {{ message }}</p>
                {% endfor %}

        {% endfor %}

        {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
