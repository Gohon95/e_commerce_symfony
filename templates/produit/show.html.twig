{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>{{ produit.nom }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ produit.stock }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{ asset('uploads/' ~ produit.photo) }}" style="width: 300px"></td>
            </tr>
        </tbody>
    </table>
    {{form(ajout_article)}}
    <a href="{{ path('produit_index') }}">Retour a l'accueil</a> <br/>

    {% if is_granted('ROLE_ADMIN','ROLE_SUPER_ADMIN') %}

    <a class="btn btn-primary" href="{{ path('produit_edit', {'id': produit.id}) }}">Editer</a>
    {{ include('produit/_delete_form.html.twig') }}

    {% endif %}
{% endblock %}
